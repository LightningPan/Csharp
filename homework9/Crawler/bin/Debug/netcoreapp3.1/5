<script>
function resend_email(is_alert){
$.ajax({
type:'GET',
url: "/do.php?ac=new_register&op=resend_email",
cache:false,
success: function(msg){
if(msg == 1){
if(is_alert=='1'){
alert("邮件发送成功，马上去邮箱看看");
}	
}else{
if(is_alert=='1'){
alert("邮件发送失败！请重试");
}
}
 }	
});
}
jQuery(document).ready(function($) {
if ($(".banner-left").children().is('img')) {
$(".banner-left").css({
'cursor': 'default',
});
}
});
function collect_kvideo(kvideoid)
{
$.get("/personal.php?ajax_get_type=user_favorite_kvideo&req_ajax_type=ajax&kvideoid="+kvideoid,{},function(data){

if(40001==data['flag'])
{
sub_login_click();
return;
}
if(1==data['flag'])
{
if('cancle'==data['msg']['fav_type'])
{
$(".icon-collect").removeClass('icon-collect-hover');
}
else if('collect'==data['msg']['fav_type'])
{
$(".icon-collect").addClass('icon-collect-hover');
tips_show('success',"收藏成功");
}
}

},'json');
}
function input_password(){
$("#password_error").hide();
    	$("#input_password").show();
}
    
function hide_password(){
        input_name = "#input_password";
    	$(input_name).hide();
    	}

function checkcode() {
    var id = $("#classesid").val();
    	var code = $("#code_password").val();   	
    	
    	$.ajax({
    		type:'GET',
    		url:'/kvideo.php?do=signup',
    		data:{'video_id':4746,'code':code,'type':'checkcode'},
    		success:function(msg){
    			if(msg==1){
    				signup();
    			}else{
    				$('#password_error').show();
    			}
    		}
    	});
}
function signup(){
var id = $("#classesid").val();
if(id=='' || id==0){
alert('请选择班次');
return ;
}

if(id=='-1'){
$("#input_password").hide();
}
$.ajax({
type:'GET',
url: "/kvideo.php?do=signup&req_ajax_type=ajax",
cache:false,
data: {'type':'add_apply','teacherid':'3836532','video_id':'4746','classesid':id},
success: function(msg){

if(msg){
if(msg == -1){
//$.colorbox({open:"true",opacity:0.65,contentWidth:"900px", contentHeight:"700px",inline:"true", href:"#login_box"});
//login_box_top('');
sub_login_click();
}else if(msg == -2){
top.window.location.href="/mooc/4746";
}else if(msg == -3){
alert("本课程需要购买");
}else if(msg == -4){
$.colorbox({open:"true",opacity:0.65,contentWidth:"738px", contentHeight:"322px",inline:"true", href:"#email_checking_signup"});
                        $(".email_prompt").text("亲，只需完成邮箱验证，就可以报名所有精彩课程了~");
                                      resend_email('0');
}else if(msg == -11){
                        $.colorbox({open:"true",opacity:0.65,contentWidth:"738px", contentHeight:"322px",inline:"true", href:"#email_checking_signup"});
                        $(".email_prompt").text("亲，为了享受更多服务，请您进行邮箱验证！");
                                      resend_email('0');
                    }else if(msg == -5){
$.colorbox({open:"true",opacity:0.65,contentWidth:"294px", contentHeight:"215px",inline:"true", href:"#classes_max_box"});
}else if(msg == 0){
alert("报名失败");
}else if(msg == 40002){
//alert("您没有操作权限");
$.colorbox({open:"true",opacity:0.65,contentWidth:"294px", contentHeight:"215px",inline:"true", href:"#no_permit"});
}else{
if(id == '-1'){
//修改当前的报名人数	
var num=parseInt($("#people_stat_count").html());
num=num+1;						
$("#people_stat_count").html(num);
//修改报名人数结束
$.colorbox({open:"true",opacity:0.65,escKey:false,overlayClose:false,contentWidth:"294px", contentHeight:"175px",inline:"true", href:"#reserve_tips",onClosed:function(){
change_class('-1');
}});
}else{
$.colorbox({open:"true",opacity:0.65,escKey:false,overlayClose:false,contentWidth:"294px", contentHeight:"175px",inline:"true", href:"#apply_tips",onClosed:function(){
//top.window.location.href="/mooc/4746";
}});
/*var screenWidth = window.innerWidth;//当前窗口宽度
var screenHeight = window.innerHeight;//当前窗口高度

//	$("#apply_tips").css({"position": "fixed","top":"0","background": "#4c4c4c","z-index": "1001","-moz-opacity": "0.65","opacity":"0.65","filter": "alpha(opacity=65)","width":screenWidth + 'px',"height":screenHeight + 'px'});
//	$('.login-close-xx').show();
//	$("#cboxContent").css({"position":"fixed","left":screenWidth/2-395/2 + 'px',"top":screenHeight/2-325/2 + 'px'});
$.ajax({
url  : "/cp.php?ac=friend&op=add_friend_save",
type : "POST",
data : {'uid':3836532,'note':"",'gid':0},
dataType : 'json',
success  : function(data){	
if(data.msg){											
//
}										
}							
});*/
}
}
}
 }	
});
}
//如果无班次则默认显示预约班次
check_class();
function check_class(){
var a=0;
if(a==1){
change_class(-1);
}
}
function change_class(id) {
$("#classesid").val(id);
$.ajax({
type : "GET",
//url	 : "/kvideo.php?do=signup",
url	 : "/kvideo.php?do=videodetail",
data: {'type':'check_signup','kvideoid':4746,'classesid':id},
//		cache: false,
success : function(data){
if(data) {
$("#top-select").html(data);
$("#bottom").html(data);
}
}
});
}
function get_val()
{
return $(".select-large").val();
}
function get_val_()
{
return $("#classesid").val();
}

function enter_study_center(kvideoid , classesid)
{
    if(0){
        $.colorbox({open:"true",opacity:0.65,escKey:false,overlayClose:false,contentWidth:"294px", contentHeight:"175px",inline:"true", href:"#preview_tips"});
    }
    else {
        $.get("/api/check_read.php?classesid="+classesid+"&kvideoid="+kvideoid,{},function(data){
            data=$.trim(data);
            if(data=="tt"){
                window.location.href = "/kvideo.php?do=course_progress&kvideoid=" + kvideoid + "&classesid=" + classesid;
            }else if(data=='ff'){
                window.location.href = "/kvideo.php?do=kvideo_announcement&kvideoid=" + kvideoid + "&classesid=" + classesid;
            }else if(data == '-1'){
                $.colorbox({open:"true",opacity:0.65,contentWidth:"738px", contentHeight:"322px",inline:"true", href:"#email_checking_signup"});
                    $(".email_prompt").text("亲，为了享受更多服务，请您进行邮箱验证！");
                    resend_email('0');
            }
        });
    }
}

$(document).ready(function(){
    $(".icon-share").hover(function(){
        $(".share-box").show();
    });
    $(".icon-share").mouseleave(function() {
        $(".share-box").hide();
    })
});
</script>
