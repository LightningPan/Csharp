<script language="javascript">
function findPassword(){
var screenHeight = window.innerHeight;//当前窗口高度
var res='';
var val=$("#email").val();
var formhash=$("#formhash").val();
$("#m1").hide();
$("#m2").hide();
$("#m3").hide();
$("#m4").hide();
if(/^[\w-]+(\.[\w-]+)*@[\w-]+(\.[\w-]+)+$/.test(val)){
$.ajax({
type:'GET',
url: "do.php",
async: false,
data: {'email':val,'ac':'lostpasswd','op':'checkemail'},
success: function(a){
if(a==1){
$.ajax({
type:'POST',
data: {'email':val,'emailsubmit':1,'formhash':formhash},
url: "do.php?ac=lostpasswd&op=email",
async: true,
success: function(a){
}
});
$("#forget_password").css("display","none");
$("#sendEmail .mask-boxs").css("top",screenHeight/2-241 + 'px');
$("#sendEmail").css("display","block");
}else if(a== -1){	//空
res='tisi';
$("#m2").show();
}else if(a==2){
res='exsit_tisi';
$("#m3").show();
}else if(a==3){
res='forbid_tisi';
$("#m4").show();
}else{
//
}

}
});


}
else{
res='error_tisi';
$("#m2").show();
}
}
</script>
